<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>WhereTo | Commuters</title>
  <link rel="icon" href="/AWTFavicon.png" type="image/png">
  <link rel="stylesheet" href="commuters.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>
  <header class="admin-header">
    <div class="header-left">
      <button class="menu-btn" id="menuBtn">&#9776; <span id="pendingBadgeBurger" class="badge">0</span></button>
      <div class="logo">Where<br>To<img src="compass.png" alt="logo" style="height:20px;vertical-align:middle;"></div>
    </div>
    <div class="header-right">
      <div class="notification-bell">
        <i class="fa-solid fa-bell"></i>
        <div class="bell-dropdown" id="bellDropdown">
          <a href="/aprof"><i class="fa-solid fa-user"></i> Profile</a>
          <a href="/cpass" onclick="changePassword(event)"><i class="fa-solid fa-key"></i> Change Password</a>
          <a href="/signin" onclick="adminLogout(event)"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>
        </div>
      </div>
    </div>
  </header>
  <div class="sidebar" id="sidebar">
    <div class="sidebar-logo">
      <img src="Logo.PNG" alt="WhereTo Logo" style="width:100px;margin:20px auto;display:block;">
    </div>
    <ul>
      <li><a href="/admin"><i class="fa-solid fa-chart-line"></i> Dashboard</a></li>
      <li><a href="/routem"><i class="fa-solid fa-route"></i> Routes</a></li>
      <li><a href="/commuters" class="active"><i class="fa-solid fa-users"></i> Commuters</a></li>
      <li><a href="/reportadmin"><i class="fa-solid fa-flag"></i> Reports <span id="pendingBadge" class="badge">0</span></a></li>
      <li><a href="/aprof"><i class="fa-solid fa-user"></i> User Management</a></li>
    </ul>
  </div>
  <main class="user-main">
<div class="user-header">
  <div>
    <h2>Commuters</h2>
    <p>Manage user accounts and permissions</p>
<div class="user-stats">
  <div class="stat-card"><span>Total Users</span><span class="stat-value"><%= stats.totalUsers %></span><i class="fa-solid fa-users"></i></div>
  <div class="stat-card"><span>Active</span><span class="stat-value"><%= stats.active %></span><i class="fa-solid fa-user-check"></i></div>
  <div class="stat-card"><span>Suspended</span><span class="stat-value"><%= stats.suspended %></span><i class="fa-solid fa-user-xmark"></i></div>
  <div class="stat-card"><span>Admins</span><span class="stat-value"><%= stats.admins %></span><i class="fa-solid fa-user-shield"></i></div>
</div>
    <div class="user-searchbar">
      <input type="text" placeholder="Search users by name or email...">
      <div class="filter-group">
        <select>
          <option>All status</option>
          <option>Active</option>
          <option>Suspended</option>
        </select>
        <i class="fa-solid fa-filter"></i>
      </div>
    </div>
<h3>Users (<%= users.length %>)</h3>
<div class="user-grid">
  <% users.forEach(user => { %>
    <div class="user-card" data-id="<%= user._id %>">
      <div class="user-card-header">
        <i class="fa-solid fa-user-circle"></i>
        <div>
          <div class="user-name"><%= user.username %></div>
          <div class="user-email"><%= user.email %></div>
        </div>
        <span class="user-status <%= user.status %>"><%= user.status %></span>
      </div>
      <div class="user-card-info">
        <div><i class="fa-solid fa-calendar"></i> Joined <%= user.timestamp.toISOString().split('T')[0] %></div>
        <div><i class="fa-solid fa-clock"></i> <%= user.timestamp.toISOString().split('T')[0] %> (last activity)</div>  <!-- Placeholder; update if you add a field -->
        <div><i class="fa-solid fa-route"></i> 0 trips</div>  <!-- Placeholder; update if you add a field -->
        <div><i class="fa-solid fa-user"></i> <%= user.role %></div>
      </div>
    <div class="user-card-actions">
      <button class="suspend">
        <i class="fa-solid fa-<%= user.status === 'active' ? 'ban' : 'check' %>"></i> 
        <%= user.status === 'active' ? 'suspend' : 'unsuspend' %>
      </button>
      <button class="delete"><i class="fa-solid fa-trash"></i> delete</button>
    </div>
    </div>
  <% }); %>
</div>
  </main>
  <script src="commuters.js"></script>
  <script>
    async function updatePendingBadge() {
      try {
        const response = await fetch('/api/admin/reports/pending-count');
        const data = await response.json();
        const sidebarBadge = document.getElementById('pendingBadge');
        const burgerBadge = document.getElementById('pendingBadgeBurger');
        const display = data.count > 0 ? 'inline' : 'none';
        if (sidebarBadge) {
          sidebarBadge.textContent = data.count;
          sidebarBadge.style.display = display;
        }
        if (burgerBadge) {
          burgerBadge.textContent = data.count;
          burgerBadge.style.display = display;
        }
      } catch (err) {
        console.error('Error updating badge:', err);
      }
    }
    // Load on page load and poll
    document.addEventListener('DOMContentLoaded', () => {
      updatePendingBadge();
      setInterval(updatePendingBadge, 10000);  // Poll every 10 seconds
    });
    </script>
</body>
</html>