<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>WhereTo | Sign Up</title>
  <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
  <link rel="icon" href="/WTFavicon.PNG" type="image/png">
  <link rel="stylesheet" href="signup.css" />
</head>
<body>
  <!-- HEADER -->
  <header>
    <div class="header-left">
      <img src="compass.PNG" alt="Left Icon" class="left-icon" />
      <img src="Logo.PNG" alt="WhereTo Jeepney Route Finder Logo" class="logo-img" />
    </div>
    <nav>
      <a href="/about" class="btn">About</a>
    </nav>
  </header>

  <!-- MAIN CONTENT -->
  <div class="signup-container">
    <div class="image-section">
      <img src="bigwhere2logo.png" alt="Commuting Image" />
    </div>

    <div class="form-section">
      <div class="signup-box">
        <h2>Create Account</h2>
        <form id="signupForm" action="/signup" method="post">
          <label>Username</label>
          <input type="text" name="username" id="signupUsername" placeholder="Enter your username" required />

          <label>Email</label>
          <input type="email" name="email" id="signupEmail" placeholder="Enter your email" required />

          <label>Password</label>
          <input type="password" name="password" id="signupPassword" placeholder="Enter your password" required />

          <label>Confirm Password</label>
          <input type="password" name="confirm_password" id="confirmPassword" placeholder="Re-enter your password" required />

          <button type="submit">Sign Up</button>
        </form>
        <p>Already have an account? <a href="/signin">Sign in</a></p>
      </div>
    </div>
  </div>

  <!-- JavaScript for Sign Up -->
  <script>
    // Define showToast using Toastify
    function showToast(message, type = 'info') {
      let bgColor = 'blue';  // Default for info
      if (type === 'success') bgColor = 'green';
      if (type === 'error') bgColor = 'red';

      Toastify({
        text: message,
        duration: 5000,  // Auto-dismiss after 5 seconds
        gravity: "top",  // Top of screen
        position: "right",  // Right side
        backgroundColor: bgColor,
        close: true  // Add a close button
      }).showToast();
    }

    document.getElementById('signupForm').addEventListener('submit', function(e) {
      const username = document.getElementById('signupUsername').value.trim();
      const email = document.getElementById('signupEmail').value.trim();
      const password = document.getElementById('signupPassword').value;
      const confirmPassword = document.getElementById('confirmPassword').value;

      // Basic validations (show toast and prevent submission if invalid)
      if (!username || !email || !password || !confirmPassword) {
        showToast('Please fill in all fields', 'error');
        e.preventDefault();
        return;
      }
      if (password !== confirmPassword) {
        showToast('Passwords do not match', 'error');
        e.preventDefault();
        return;
      }
      if (password.length < 6) {
        showToast('Password must be at least 6 characters long', 'error');
        e.preventDefault();
        return;
      }

      // If validations pass, let the form submit naturally (server will handle redirect to /otp)
    });
  </script>
</body>
</html>