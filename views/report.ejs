<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WhereTo | Report Issues</title>
  <link rel="icon" href="/WTFavicon.png" type="image/png">
    <link rel="stylesheet" href="report.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <div class="header-left">
            <img src="report.png" alt="Back" class="icon back-icon" onclick="window.history.back()">
            <span>Report Issue</span>
        </div>
    </header>

    <section class="main-content">
        <div class="info-banner">
            <img src="report.png" alt="Warning" class="banner-icon">
            <div class="banner-text">
                <h3>Help improve our service</h3>
                <p>Your reports help us improve transportation services for everyone.</p>
            </div>
        </div>

        <div class="content-section issue-reporting">
            <h2>What issue are you reporting?</h2>
            <div class="issue-options">
                <div class="option selected" data-issue="route-change">
                    <img src="pin.png" alt="Pin" class="option-icon">
                    <span>Route change</span>
                </div>
                <div class="option" data-issue="service-delay">
                    <span>Service Delay</span>
                </div>
                <div class="option" data-issue="road-closure">
                    <span>Road Closure</span>
                </div>
                <div class="option" data-issue="service-suspension">
                    <span>Service Suspension</span>
                </div>
            </div>
        </div>

        <div class="content-section location-details">
            <h2>Location Details</h2>
            <label for="location">Location</label>
            <input type="text" id="location" placeholder="Enter location">

            <label for="affected-route">Affected route/vehicle</label>
            <input type="text" id="affected-route" placeholder="Enter route or vehicle details">
        </div>

        <div class="content-section additional-details">
            <h2>Additional Details</h2>
            <label for="description">Description</label>
            <textarea id="description" rows="5" placeholder="Describe the issue..."></textarea>
        </div>

        <div class="content-section add-photo">
            <div class="photo-header">
                <img src="camera.png" alt="Camera" class="photo-icon">
                <h2>Add Photo (Optional)</h2>
            </div>
            <div class="photo-upload-area" id="photoUploadArea">
                <img src="camera.png" alt="Camera" class="large-camera-icon">
                <p>Take a photo to help document the issue</p>
                <button class="upload-btn" id="uploadBtn">Upload Photo</button>
                <input type="file" id="photoInput" accept="image/*" style="display: none;">
            </div>
        </div>

        <button class="submit-report-btn" id="submitBtn">
            <img src="filter.png" alt="Filter" class="submit-icon">
            Submit report
        </button>

        <div class="content-section recent-reports">
            <h2>Recent Reports</h2>
            <div class="report-item">
                <div class="report-info">
                    <h3>Bus delay</h3>
                    <p>reported 15 mins ago</p>
                </div>
                <span class="status active">Active</span>
            </div>
            <div class="report-item">
                <div class="report-info">
                    <h3>Route Construction</h3>
                    <p>reported 1 hr ago</p>
                </div>
                <span class="status reviewing">Reviewing</span>
            </div>
            <div class="report-item">
                <div class="report-info">
                    <h3>Route 3 restored</h3>
                    <p>resolved</p>
                </div>
                <span class="status resolved">Resolved</span>
            </div>
        </div>
    </section>

    <script>
        // Issue selection functionality
        const issueOptions = document.querySelectorAll('.option');
        let selectedIssue = 'route-change';

        issueOptions.forEach(option => {
            option.addEventListener('click', () => {
                // Remove selected class from all options
                issueOptions.forEach(opt => opt.classList.remove('selected'));
                // Add selected class to clicked option
                option.classList.add('selected');
                selectedIssue = option.getAttribute('data-issue');
            });
        });

        // Photo upload functionality
        const photoInput = document.getElementById('photoInput');
        const uploadBtn = document.getElementById('uploadBtn');
        const photoUploadArea = document.getElementById('photoUploadArea');

        uploadBtn.addEventListener('click', () => {
            photoInput.click();
        });

        photoInput.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = (e) => {
                    photoUploadArea.innerHTML = `
                        <img src="${e.target.result}" alt="Uploaded photo" class="uploaded-photo">
                        <p>Photo uploaded successfully</p>
                        <button class="upload-btn" onclick="document.getElementById('photoInput').click()">Change Photo</button>
                    `;
                };
                reader.readAsDataURL(file);
            }
        });

        // Form submission
        const submitBtn = document.getElementById('submitBtn');
        const locationInput = document.getElementById('location');
        const affectedRouteInput = document.getElementById('affected-route');
        const descriptionInput = document.getElementById('description');

        submitBtn.addEventListener('click', () => {
            const reportData = {
                issueType: selectedIssue,
                location: locationInput.value,
                affectedRoute: affectedRouteInput.value,
                description: descriptionInput.value,
                timestamp: new Date().toISOString()
            };

            // Validate required fields
            if (!reportData.location || !reportData.description) {
                alert('Please fill in location and description fields.');
                return;
            }

            // Save to localStorage
            const reports = JSON.parse(localStorage.getItem('userReports') || '[]');
            reports.unshift(reportData);
            localStorage.setItem('userReports', JSON.stringify(JSON.stringify(reports)));

            // Show success message
            alert('Report submitted successfully!');
            
            // Reset form
            locationInput.value = '';
            affectedRouteInput.value = '';
            descriptionInput.value = '';
            photoInput.value = '';
            photoUploadArea.innerHTML = `
                <img src="camera-large.png" alt="Camera" class="large-camera-icon">
                <p>Take a photo to help document the issue</p>
                <button class="upload-btn" id="uploadBtn">Upload Photo</button>
            `;
        });
    </script>
</body>
</html>