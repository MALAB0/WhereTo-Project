<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>WhereTo | Sign in</title>
  <link rel="icon" href="/WTFavicon.png" type="image/png">
  <link rel="stylesheet" href="/signin.css" >
  
  <!-- Toastify Library for notifications -->
  <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
</head>
<body>
  <!-- HEADER -->
  <header>
     <div class="header-left">
    <img src="compass.PNG" alt="Left Icon" class="left-icon" />
    <img src="Logo.PNG" alt="WhereTo Jeepney Route Finder Logo" class="logo-img" />
  </div>
    <nav>
      <a href="/about" class="btn">About</a>
    </nav>
  </header>

  <!-- MAIN CONTENT -->
  <div class="signin-container">
    <div class="image-section">
      <img src="bigwhere2logo.png" alt="Commuting Image" />
    </div>

    <div class="form-section">
      <div class="signin-box">
        <h2>Sign In</h2>
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="error-message" style="color: #ff0000; margin-bottom: 15px; text-align: center;">
            <%= error %>
          </div>
        <% } %>
        <form id="signinForm">
          <label>Email</label>
          <input type="email" name="email" id="signinEmail" placeholder="Enter your email" required />
          <label>Password</label>
          <input type="password" name="password" id="signinPassword" placeholder="Enter your password" required />
          <p><a href="/forgotpass">Forgot password?</a></p>
          <button type="submit">Sign In</button>
        </form>
        <p>Don't have an account? <a href="/signup">Sign up</a></p>

      </div>
    </div>
  </div>

  <script>
    // Define showToast using Toastify
    function showToast(message, type = 'info') {
      let bgColor = 'blue';  // Default for info
      if (type === 'success') bgColor = 'green';
      if (type === 'error') bgColor = 'red';

      Toastify({
        text: message,
        duration: 5000,  // Auto-dismiss after 5 seconds
        gravity: "top",  // Top of screen
        position: "right",  // Right side
        backgroundColor: bgColor,
        close: true  // Add a close button
      }).showToast();
    }

    document.getElementById('signinForm').addEventListener('submit', async function(e) {
      e.preventDefault(); // Prevent form from submitting normally
      
      const email = document.getElementById('signinEmail').value.trim();
      const password = document.getElementById('signinPassword').value;

      // Basic validations
      if (!email || !password) {
        showToast('Please fill in all fields', 'error');
        return;
      }

      try {
        const response = await fetch('/signin', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ email, password })
        });

        const data = await response.json();
        
        if (response.ok) {
          // Successful login - redirect
          window.location.href = data.redirect;
        } else {
          // Show error message
          showToast(data.error, 'error');
        }
      } catch (err) {
        console.error('Login error:', err);
        showToast('An error occurred during sign in. Please try again.', 'error');
      }
    });
  </script>
</body>
</html>