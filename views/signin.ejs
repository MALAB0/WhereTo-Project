<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>WhereTo | Sign in</title>
  <link rel="icon" href="/WTFavicon.png" type="image/png">
  <link rel="stylesheet" href="/signin.css" >
</head>
<body>
  <!-- HEADER -->
  <header>
     <div class="header-left">
    <img src="compass.PNG" alt="Left Icon" class="left-icon" />
    <img src="Logo.PNG" alt="WhereTo Jeepney Route Finder Logo" class="logo-img" />
  </div>
    <nav>
      <a href="/about" class="btn">About</a>
    </nav>
  </header>

  <!-- MAIN CONTENT -->
  <div class="signin-container">
    <div class="image-section">
      <img src="bigwhere2logo.png" alt="Commuting Image" />
    </div>

    <div class="form-section">
      <div class="signin-box">
        <h2>Sign In</h2>
        <form id="signinForm" action="/signin" method="post">
          <label>Email</label>
          <input type="email" name="email" id="signinEmail" placeholder="Enter your email" required />
          <label>Password</label>
          <input type="password" name="password" id="signinPassword" placeholder="Enter your password" required />
          <button type="submit">Sign In</button>
        </form>
        <p>Don't have an account? <a href="/signup">Sign up</a></p>

      </div>
    </div>
  </div>

  <!-- JavaScript for Sign In -->
 <script>
    document.getElementById('signinForm').addEventListener('submit', function(e) {
      
      const email = document.getElementById('signinEmail').value.trim();
      const password = document.getElementById('signinPassword').value;

      if (!email || !password) {
        alert('Please fill in all fields');
        return;
      }

      try {
        // Check localStorage for user credentials first
        const users = JSON.parse(localStorage.getItem('users') || '[]');
        const user = users.find(u => u.email === email && u.password === password);

        if (user) {
          // Store current user session
          localStorage.setItem('currentUser', JSON.stringify(user));
          
          // Get username from email for routing
          const username = email.toLowerCase().split('@')[0];
          
          // Redirect based on username
          if (username.includes('admin')) {
            window.location.href = '/admin';
          } else {
            window.location.href = '/destination';
          }
        } else {
          alert('Invalid email or password. Please try again or sign up.');
        }
      } catch (err) {
        console.error('Sign in error:', err);
        alert('An error occurred during sign in. Please try again.');
      }
    });
</script>
</body>
</html>
