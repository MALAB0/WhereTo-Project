<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>WhereTo | Route Manage</title>
  <link rel="icon" href="/AWTFavicon.PNG" type="image/png">
  <link rel="stylesheet" href="routemanage.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>
  <header class="admin-header">
    <div class="header-left">
      <button class="menu-btn" id="menuBtn">&#9776;</button>
      <div class="logo">Where<br>To<img src="compass.png" alt="logo" style="height:20px;vertical-align:middle;"></div>
    </div>
    <div class="header-right">
      <div class="notification-bell">
        <i class="fa-solid fa-bell"></i>
        <div class="bell-dropdown" id="bellDropdown">
          <a href="/aprof"><i class="fa-solid fa-user"></i> Profile</a>
          <a href="/cpass" onclick="changePassword(event)"><i class="fa-solid fa-key"></i> Change Password</a>
          <a href="/signin" onclick="adminLogout(event)"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>
        </div>
      </div>
    </div>
  </header>

  <div class="sidebar" id="sidebar">
    <div class="sidebar-logo">
      <img src="Logo.PNG" alt="WhereTo Logo" style="width:100px;margin:20px auto;display:block;">
    </div>
    <ul>
      <li><a href="/admin"><i class="fa-solid fa-chart-line"></i> Dashboard</a></li>
      <li><a href="/routem" class="active"><i class="fa-solid fa-route"></i> Routes</a></li>
      <li><a href="/commuters"><i class="fa-solid fa-users"></i> Commuters</a></li>
      <li><a href="/reportadmin"><i class="fa-solid fa-flag"></i> Reports</a></li>
      <li><a href="/aprof"><i class="fa-solid fa-user"></i> User Management</a></li>
    </ul>
  </div>

  <main class="routes-main">
    <div class="routes-header">
      <div>
        <h2>Routes</h2>
        <p>Manage route information and details</p>
      </div>
      <button id="addRouteBtn" class="add-route-btn">+Add routes</button>
    </div>

    <div class="routes-grid" id="routesGrid">
      <div class="route-card">
        <div class="route-title">
          <span></span>
          <span class="route-status active">active</span>
        </div>
        <div class="route-desc"></div>
        <div class="route-riders"></div>
        <div class="route-actions">
          <button class="view"><i class="fa-solid fa-eye"></i> view</button>
          <button class="edit"><i class="fa-solid fa-pen"></i> edit</button>
          <button class="delete"><i class="fa-solid fa-trash"></i> delete</button>
        </div>
      </div>
    </div>


    <div id="addRouteModal" class="add-route-modal">
      <div class="modal-content">
        <span class="close-btn">&times;</span>
        <h3 id="modalTitle">Add New Route</h3>
        <form id="addRouteForm">
          <label for="newRouteName">Route Name:</label>
          <input type="text" id="newRouteName" required>

          <label for="newRouteStart">Start Point:</label>
          <input type="text" id="newRouteStart" required>

          <label for="newRouteEnd">End Point:</label>
          <input type="text" id="newRouteEnd" required>

          <label for="newRouteStatus">Status:</label>
          <select id="newRouteStatus" required>
          <option value="operational">Operational</option>
          <option value="maintenance">Under Maintenance</option>
          <option value="suspended">Suspended</option>
</select>


          <button type="button" id="nextStepBtn">Next</button>
        </form>
      </div>
    </div>


    <div id="routeStepsModal" class="add-route-modal">
      <div class="modal-content">
        <span class="close-steps-btn">&times;</span>
        <h3 id="stepsModalTitle">Add Route Steps</h3>
        <form id="routeStepsForm">
          <div class="steps-inputs">
            <label>Step 1:</label>
            <input type="text" id="step1" required>
            <label>Step 2:</label>
            <input type="text" id="step2" required>
            <label>Step 3:</label>
            <input type="text" id="step3" required>
            <label>Step 4:</label>
            <input type="text" id="step4" required>
            <label>Step 5:</label>
            <input type="text" id="step5" required>
          </div>
          <button type="submit" id="saveRouteBtn">Save Route</button>
        </form>
      </div>
    </div>


    <div id="routeViewModal" class="add-route-modal">
      <div class="modal-content">
        <span class="close-view-btn">&times;</span>
        <h3 id="viewRouteTitle">Route Details</h3>
        <div id="routeViewContent"></div>
      </div>
    </div>
  </main>

  <script src="routemanage.js"></script>
</body>
</html>