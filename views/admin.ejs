<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WhereTo | Admin Dashboard</title>
  <link rel="icon" href="/AWTFavicon.PNG" type="image/png">
  <link rel="stylesheet" href="admin.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/xlsx/dist/xlsx.full.min.js"></script>
  <style>
    .export-buttons {
      margin-top: 15px;
      display: flex;
      gap: 10px;
    }

    .export-buttons button {
      background: #0078ff;
      color: white;
      border: none;
      padding: 8px 14px;
      border-radius: 6px;
      cursor: pointer;
      transition: 0.2s;
      font-family: 'Poppins', sans-serif;
    }

    .export-buttons button:hover {
      background: #005fcc;
    }

    .chart-container {
      position: relative;
      width: 90%;
      max-width: 700px;
      margin: 0 auto;
    }
  </style>
</head>
<body>
  <header class="admin-header">
    <div class="header-left">
      <button class="menu-btn" id="menuBtn">&#9776; <span id="pendingBadgeBurger" class="badge">0</span></button>
      <div class="logo">Where<br>To<img src="compass.png" alt="logo" style="height:20px;vertical-align:middle;"></div>
        
      </div>
    </div>
    <div class="header-right">
      <div class="notification-bell">
        <i class="fa-solid fa-bell"></i>
        <div class="bell-dropdown" id="bellDropdown">
          <a href="/aprof"><i class="fa-solid fa-user"></i> Profile</a>
          <a href="/cpass" onclick="changePassword(event)"><i class="fa-solid fa-key"></i> Change Password</a>
          <a href="/signin" onclick="adminLogout(event)"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>
        </div>
      </div>
    </div>
  </header>

  <div class="sidebar" id="sidebar">
    <div class="sidebar-logo">
      <img src="Logo.PNG" alt="WhereTo Logo" style="width:100px;margin:20px auto;display:block;">
    </div>
    <ul>
      <li><a href="/admin" class="active"><i class="fa-solid fa-chart-line"></i> Dashboard</a></li>
      <li><a href="/routem"><i class="fa-solid fa-route"></i> Routes</a></li>
      <li><a href="/commuters"><i class="fa-solid fa-users"></i> Commuters</a></li>
      <li><a href="/reportadmin"><i class="fa-solid fa-flag"></i> Reports <span id="pendingBadge" class="badge">0</span></a></li>
      <li><a href="/aprof"><i class="fa-solid fa-user"></i> User Management</a></li>
    </ul>
  </div>

  <main class="admin-main">
    <section class="dashboard-overview">
      <h2>Admin Dashboard</h2>
      <p>Overview of WhereTo</p>
      <div class="stats-grid">
        <div class="stat-card users">
          <div class="stat-title">Total Users</div>
          <div class="stat-value">15,427</div>
          <div class="stat-icon"><i class="fa-solid fa-users"></i></div>
        </div>
        <div class="stat-card routes">
          <div class="stat-title">Active Routes</div>
          <div class="stat-value">342</div>
          <div class="stat-icon"><i class="fa-solid fa-route"></i></div>
        </div>
        <div class="stat-card reports">
          <div class="stat-title">Pending Reports</div>
          <div class="stat-value">23</div>
          <div class="stat-icon"><i class="fa-solid fa-triangle-exclamation"></i></div>
        </div>
        <div class="stat-card trips">
          <div class="stat-title">Daily Trips</div>
          <div class="stat-value">8,434</div>
          <div class="stat-icon"><i class="fa-solid fa-chart-line"></i></div>
        </div>
      </div>
    </section>

    <!-- Most Used Routes Chart -->
    <section class="most-used-routes">
      <h2>Most Used Routes</h2>
      <div class="chart-container">
        <canvas id="mostUsedRoutesChart"></canvas>
      </div>

      <div class="export-buttons">
        <button id="exportChartBtn"><i class="fa-solid fa-image"></i> Export Chart</button>
        <button id="exportDataBtn"><i class="fa-solid fa-file-excel"></i> Export Data</button>
      </div>
    </section>
  </main>

  <script src="admin.js"  ></script>
  <script>
    async function updatePendingBadge() {
      try {
        const response = await fetch('/api/admin/reports/pending-count');
        const data = await response.json();
        const sidebarBadge = document.getElementById('pendingBadge');
        const burgerBadge = document.getElementById('pendingBadgeBurger');
        const display = data.count > 0 ? 'inline' : 'none';
        if (sidebarBadge) {
          sidebarBadge.textContent = data.count;
          sidebarBadge.style.display = display;
        }
        if (burgerBadge) {
          burgerBadge.textContent = data.count;
          burgerBadge.style.display = display;
        }
      } catch (err) {
        console.error('Error updating badge:', err);
      }
    }
    // Load on page load and poll
    document.addEventListener('DOMContentLoaded', () => {
      updatePendingBadge();
      setInterval(updatePendingBadge, 10000);  // Poll every 10 seconds
    });</script>
  <!-- Chart and Export Logic -->
  <script>
    let routeChart;
    async function loadRouteStats() {
      try {
        const res = await fetch("/api/search/stats");
        const data = await res.json();

        if (!data.length) {
          document.getElementById("mostUsedRoutesChart").outerHTML =
            "<p style='text-align:center;margin-top:20px;'>No search data available yet.</p>";
          return;
        }

        const labels = data.map(item => `${item._id.from} → ${item._id.to}`);
        const counts = data.map(item => item.count);

        const ctx = document.getElementById("mostUsedRoutesChart").getContext("2d");
        routeChart = new Chart(ctx, {
          type: "bar",
          data: {
            labels: labels,
            datasets: [{
              label: "Route Usage",
              data: counts,
              backgroundColor: "rgba(54, 162, 235, 0.6)",
              borderColor: "rgba(54, 162, 235, 1)",
              borderWidth: 1
            }]
          },
          options: {
            responsive: true,
            plugins: {
              legend: { display: false },
              title: {
                display: true,
                text: "Most Searched Routes (Live Data)"
              }
            },
            scales: {
              y: { beginAtZero: true }
            }
          }
        });

        // Attach export handlers
        setupExportButtons(data);
      } catch (err) {
        console.error("❌ Failed to load route stats:", err);
      }
    }

    function setupExportButtons(data) {
      // Export Chart Image
      document.getElementById("exportChartBtn").addEventListener("click", () => {
        if (!routeChart) return;
        const link = document.createElement("a");
        link.download = "MostUsedRoutesChart.png";
        link.href = routeChart.toBase64Image();
        link.click();
      });

      // Export Data Excel
      document.getElementById("exportDataBtn").addEventListener("click", () => {
        if (!data || !data.length) return;
        const excelData = data.map(item => ({
          Route: `${item._id.from} → ${item._id.to}`,
          "Search Count": item.count
        }));

        const worksheet = XLSX.utils.json_to_sheet(excelData);
        const workbook = XLSX.utils.book_new();
        XLSX.utils.book_append_sheet(workbook, worksheet, "MostUsedRoutes");
        XLSX.writeFile(workbook, "MostUsedRoutesData.xlsx");
      });
    }

    // Load chart data on page load
    loadRouteStats();
  </script>
</body>
</html>
